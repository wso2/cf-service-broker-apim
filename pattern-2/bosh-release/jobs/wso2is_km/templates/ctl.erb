set +e
set -xv

script_dir=$(dirname $0)
job_dir=${script_dir}/..

run_dir=/var/vcap/sys/run/wso2is_km
log_dir=/var/vcap/sys/log/wso2is_km
pid_file=${run_dir}/pid

mkdir -p ${run_dir} ${log_dir}
chown -R vcap:vcap ${run_dir} ${log_dir}

mkdir -p /var/vcap/store/wso2is_km/data
export WSO2_IS_KM_DATA_DIR=/var/vcap/store/wso2is_km/data/wso2is_km

export JDK_HOME=/var/vcap/packages/openjdk/
export WSO2_IS_KM_PKG_HOME=/var/vcap/packages/wso2is_km/
export WSO2_IS_KM_SERVER_PACKAGE=/var/vcap/packages/wso2is_km/

# set any environment variables for your software
export MIN_HEAP=<%= properties.keymanager.memory.min_heap %>
export MAX_HEAP=<%= properties.keymanager.memory.max_heap %>
export MAX_PERMGEN=<%= properties.keymanager.memory.max_permgen %>
export JAVA_OPTS=" -Xmx${MAX_HEAP}m -Xms${MIN_HEAP}m -XX:MaxPermSize=${MAX_PERMGEN}m"

export DEBUG_LOG=${log_dir}/wso2is_km.log

touch $DEBUG_LOG
chmod -R 755 /var/vcap/sys
chmod 777 $DEBUG_LOG

function log_debug() {
  echo `date` $1 >> $DEBUG_LOG
}

log_debug "Kicking off ctl script as `whoami` with $1"

case $1 in

  start)
    # kill the previously running instance if any
    kill -9 `cat ${pid_file}`

    pushd ${JDK_HOME}
    archive=`ls jdk*gz`
    tar -zxvf $archive
    export JAVA_HOME=`pwd`/jdk1.8.0_202
    export JAVA_BINARY=${JAVA_HOME}/bin/java

    log_debug "JAVA_HOME: ${JAVA_HOME}"
    log_debug "JAVA_BINARY: ${JAVA_BINARY}"

    pushd ${WSO2_IS_KM_PKG_HOME}
    archive=`ls wso2is*zip`
    unzip $archive
    cd wso2is*
    WSO2_IS_KM_HOME=`pwd`

    # Here any config files your application needs:
    cp -Tr ${job_dir}/repository/ ${WSO2_IS_KM_HOME}/repository/

    # Here add any libraries your application needs:
    cp /var/vcap/packages/mysqldriver/* ${WSO2_IS_KM_HOME}/repository/components/lib/

    $WSO2_IS_KM_HOME/bin/wso2server.sh start

    # Sleep for a little while so the server comes up
    sleep 20
    WSO2_IS_KM_PID=`ps -ef | grep java | grep -v grep | awk '{print $2}' `
    echo $WSO2_IS_KM_PID > ${pid_file}

    ;;

  stop)

    kill -9 `cat ${pid_file}`
    rm -f ${pid_file}
    sleep 10

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
